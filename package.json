{
  "name": "electron-tools",
  "version": "1.0.0",
  "description": "基于 vite、Electron 的工具箱",
  "main": "src/background.js",
  "scripts": {
    "start": "chcp 65001 && electron .",
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "electron:dev": "node scripts/dev.mjs",
    "electron:preview": "node scripts/preview.mjs",
    "electron:build": "vue-tsc --noEmit && vite build && electron-builder --config electron-builder.json5",
    "electron:build:win:ia32": "vue-tsc --noEmit && vite build && electron-builder --config electron-builder.json5 --windows nsis:ia32",
    "electron:build:win:x64": "vue-tsc --noEmit && vite build && electron-builder --config electron-builder.json5 --windows nsis:x64",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx,.vue --cache --fix",
    "prepare": "husky install"
  },
  "author": "徐晓伟 <xuxiaowei@xuxiaowei.com.cn>",
  "bugs": {
    "url": "https://gitee.com/xuxiaowei-com-cn/electron-tools/issues"
  },
  "homepage": "https://gitee.com/xuxiaowei-com-cn/electron-tools",
  "keywords": [
    "electron-log",
    "electron",
    "electron-builder",
    "element-plus",
    "eslint",
    "sass",
    "typescript",
    "vite",
    "vue",
    "vue-router"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://gitee.com/xuxiaowei-com-cn/electron-tools.git"
  },
  "license": "MIT",
  "dependencies": {
    "electron-log": "4.4.8",
    "yargs": "17.7.2"
  },
  "devDependencies": {
    "@element-plus/icons-vue": "2.1.0",
    "@typescript-eslint/eslint-plugin": "5.59.8",
    "@typescript-eslint/parser": "5.59.8",
    "@vitejs/plugin-vue": "4.2.3",
    "electron": "25.0.1",
    "electron-builder": "23.6.0",
    "element-plus": "2.3.5",
    "eslint": "8.41.0",
    "eslint-config-standard": "17.1.0",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-n": "16.0.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-vue": "9.14.1",
    "husky": "8.0.3",
    "sass": "1.62.1",
    "typescript": "5.0.4",
    "unplugin-auto-import": "0.16.4",
    "unplugin-vue-components": "0.25.0",
    "vite": "4.3.9",
    "vue": "3.3.4",
    "vue-router": "4.2.2",
    "vue-tsc": "1.6.5"
  }
}
