{
  "name": "electron-tools",
  "version": "1.0.0",
  "description": "基于 vite 3、Electron 20 的工具箱",
  "main": "src/background.js",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "electron:dev": "node scripts/dev.mjs",
    "electron:preview": "node scripts/preview.mjs",
    "electron:build": "vue-tsc --noEmit && vite build && electron-builder --config electron-builder.json5",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx,.vue --cache --fix",
    "prepare": "husky install"
  },
  "author": "徐晓伟 <xuxiaowei@xuxiaowei.com.cn>",
  "bugs": {
    "url": "https://gitee.com/xuxiaowei-com-cn/electron-tools/issues"
  },
  "homepage": "https://gitee.com/xuxiaowei-com-cn/electron-tools",
  "keywords": [
    "electron-log",
    "electron",
    "electron-builder",
    "eslint",
    "sass",
    "typescript",
    "vite",
    "vue",
    "vue-router"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://gitee.com/xuxiaowei-com-cn/electron-tools.git"
  },
  "license": "MIT",
  "dependencies": {
    "electron-log": "4.4.8"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "5.46.0",
    "@typescript-eslint/parser": "5.46.0",
    "@vitejs/plugin-vue": "4.0.0",
    "electron": "22.0.0",
    "electron-builder": "23.6.0",
    "eslint": "8.29.0",
    "eslint-config-standard": "17.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-n": "15.6.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-vue": "9.8.0",
    "husky": "8.0.2",
    "sass": "1.56.2",
    "typescript": "4.9.4",
    "vite": "4.0.0",
    "vue": "3.2.45",
    "vue-router": "4.1.6",
    "vue-tsc": "1.0.12"
  }
}
